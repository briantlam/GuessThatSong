<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3A3A"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/btn90s"
        android:layout_width="126dp"
        android:layout_height="63dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="165dp"
        android:layout_marginStart="158dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="@font/press_start_2p"
        android:paddingTop="14sp"
        android:text="1990s"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn00s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn00s"
        android:layout_width="126dp"
        android:layout_height="63dp"
        android:layout_marginBottom="364dp"
        android:layout_marginEnd="165dp"
        android:layout_marginStart="158dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="@font/press_start_2p"
        android:paddingTop="14sp"
        android:text="2000s"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn10s"
        android:layout_width="126dp"
        android:layout_height="63dp"
        android:layout_marginEnd="165dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="@font/press_start_2p"
        android:paddingTop="14sp"
        android:text="2010s"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn00s" />

    <Button
        android:id="@+id/btnCustom"
        android:layout_width="142dp"
        android:layout_height="59dp"
        android:layout_marginEnd="165dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#2196F3"
        android:fontFamily="@font/press_start_2p"
        android:paddingTop="14sp"
        android:text="Custom"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn10s" />

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/select_a_playlist"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>